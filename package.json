{
  "name": "nuxsaas",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "test": "vitest run --silent=false",
    "coverage": "vitest run --coverage",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "auth:schema": "npx @better-auth/cli generate --config server/utils/auth.ts --output server/database/schema/auth.ts -y",
    "db:generate": "drizzle-kit generate --config ./server/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./server/database/drizzle.config.ts",
    "db:drop": "drizzle-kit drop --config ./server/database/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./server/database/drizzle.config.ts",
    "build": "nuxt build",
    "serve": "node .output/server/index.mjs",
    "deploy": "wrangler deploy",
    "prepare": "husky"
  },
  "dependencies": {
    "@better-auth/stripe": "^1.2.7",
    "@nuxt/ui": "^3.1.2",
    "@nuxthub/core": "^0.8.27",
    "@nuxtjs/i18n": "^9.5.4",
    "@nuxtjs/seo": "^3.0.3",
    "@vueuse/core": "13.2.0",
    "@vueuse/integrations": "^13.2.0",
    "better-auth": "^1.2.7",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "0.43.1",
    "ioredis": "^5.6.1",
    "nuxt": "^3.17.3",
    "nuxt-charts": "^0.1.8",
    "nuxt-zod-i18n": "^1.11.5",
    "ofetch": "^1.4.1",
    "pg": "^8.16.0",
    "resend": "^4.5.1",
    "sortablejs": "^1.15.6",
    "uuid": "^11.1.0",
    "vue": "^3.5.14",
    "vue-component-type-helpers": "^2.2.10",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.0",
    "@better-auth/cli": "^1.2.7",
    "@cloudflare/workers-types": "^4.20250506.0",
    "@iconify-json/lucide": "^1.2.43",
    "@iconify-json/simple-icons": "^1.2.34",
    "@nuxt/eslint": "^1.3.1",
    "@nuxt/test-utils": "^3.19.0",
    "@types/pg": "^8.15.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^3.1.3",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.26.0",
    "happy-dom": "^17.4.7",
    "husky": "^9.1.7",
    "playwright-core": "^1.52.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3",
    "wrangler": "^4.15.2"
  }
}
